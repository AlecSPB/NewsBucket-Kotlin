<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs_newscategory"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:tabBackground="@color/primary"
        app:tabTextColor="@color/primary_light"
        app:tabSelectedTextColor="@color/primary_light"
        app:tabIndicatorHeight="4dp"
        app:tabIndicatorColor="@color/tab_indicator_color"
        app:tabMode="fixed"
        app:tabGravity="fill"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_newssource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_light"
        android:layout_below="@+id/tabs_newscategory"/>

</RelativeLayout>